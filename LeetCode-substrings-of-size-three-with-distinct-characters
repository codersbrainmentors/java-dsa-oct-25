class Solution {
    public int countGoodSubstrings(String s) {
        int n = s.length();
        if(n<3){
            return 0;
        }
        int count = 0;
        for(int i = 0; i<=n-3; i++){
            int first = s.charAt(i);
            int second = s.charAt(i+1);
            int third = s.charAt(i+2);
            if(first!=second && second!=third && first!=third){
                count++;
            }
        }
        return count; 
        
    }
}
