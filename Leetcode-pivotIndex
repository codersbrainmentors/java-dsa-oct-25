class Solution {
    public int pivotIndex(int[] nums) {
        // step - 1 total sum
        int sum = 0;
        for(int i : nums){
            sum = sum + i;
        }
        // compute the left sum
        int leftSum = 0;
        for(int i = 0; i<nums.length ; i++){
            // compute the right sum
            int rightSum = sum - leftSum - nums[i];
            if(leftSum == rightSum){
                return i; // pivot index
            }
            leftSum = leftSum + nums[i];
        }
        return -1;

    }
}
